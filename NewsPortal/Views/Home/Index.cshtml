@model List<NewsPortal.Services.EnrichedPostDto>
@{
    ViewData["Title"] = "Noticias";
}
<div class="container mt-4">
    <h1 class="fun-title mb-4 text-center">
        <img src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/icons/newspaper.svg" class="icon" alt="noticias" />
        Noticias Divertidas
    </h1>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var post in Model.OrderByDescending(p => p.Comments.Count).ThenBy(p => p.Title))
        {
            <div class="col d-flex align-items-stretch">
                <div class="card fun-card h-100 w-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">
                            <img src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/icons/sticky.svg" class="icon" alt="post" />
                            @post.Title
                        </h5>
                        <p class="card-text text-muted mb-2">por <b>@post.Author?.name</b></p>
                        <span class="fun-badge mb-2">
                            <img src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/icons/chat-dots.svg" class="icon" alt="comentarios" />
                            @post.Comments.Count comentarios
                        </span>
                        <a href="@Url.Action("Post", "Home", new { id = post.Id })" class="btn fun-btn mt-auto">
                            <img src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/icons/arrow-right-circle.svg" class="icon" alt="ver más" />
                            Ver más
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
